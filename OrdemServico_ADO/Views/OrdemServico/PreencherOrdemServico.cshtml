@model Entidades.OrdemServico

@using (Html.BeginForm("Cadastrar", "OrdemServico", FormMethod.Post))
{
    <br />

    @Html.LabelFor(m => m.IdFornecedor, "Nome do Fornecedor*")
    @Html.DropDownListFor(m => m.IdFornecedor,
            new SelectList(ViewBag.Fornecedor, "Id", "Nome"), "Selecione",
            new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.IdFornecedor)

    <br />

    @Html.LabelFor(a => a.NumeroOrdemServico, "Nº OS*")
    @Html.TextBoxFor(a => a.NumeroOrdemServico, new { @class = "form-control" })
    @Html.ValidationMessageFor(a => a.NumeroOrdemServico)

    <br />

    @Html.LabelFor(a => a.Solicitante, "Solicitante*")
    @Html.TextBoxFor(a => a.Solicitante, new { @class = "form-control" })
    @Html.ValidationMessageFor(a => a.Solicitante)

    <br />

    @Html.LabelFor(a => a.Gerente, "Gerente*")
    @Html.TextBoxFor(a => a.Gerente, new { @class = "form-control" })
    @Html.ValidationMessageFor(a => a.Gerente)

    <br />

    @Html.LabelFor(a => a.Nucleo, "Núcleo*")
    @Html.TextBoxFor(a => a.Nucleo, new { @class = "form-control" })
    @Html.ValidationMessageFor(a => a.Nucleo)

    <br />

    @Html.LabelFor(a => a.Prazo, "Prazo*")
    @Html.TextBoxFor(a => a.Prazo, new { @class = "form-control datepicker", placeholder = "Coloque uma data" })
    @Html.ValidationMessageFor(a => a.Prazo)

    <br />

    @Html.LabelFor(a => a.DataLiberacao, "Data Liberação*")
    @Html.TextBoxFor(a => a.DataLiberacao, new { @class = "form-control datepicker", placeholder = "Coloque uma data" })
    @Html.ValidationMessageFor(a => a.DataLiberacao)

    <br />

    @Html.LabelFor(u => u.Status, "Status*")
    @Html.EnumDropDownListFor(m => m.Status, "Selecione", new { @class = "form-control" })
    @Html.ValidationMessageFor(u => u.Status)

    <br />

    @Html.LabelFor(u => u.DescricaoServico, "Descrição do Servico*")
    @Html.EnumDropDownListFor(m => m.DescricaoServico, "Selecione", new { @class = "form-control" })
    @Html.ValidationMessageFor(u => u.DescricaoServico)

    <br />

    <input type="submit" value="Cadastrar" />

}



@model IList<Entidades.Fornecedor>

<table class="table table-hover">
    <thead>
        <tr style="width:300px;">
            <th>Nome</th>
            <th>Nº Fornecedor</th>
            <th>Telefone</th>
            <th>Nome do Responsável</th>
            <th>Email</th>
            <th>Descrição</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nome</td>
                <td>@u.NumeroFornecedor</td>
                <td>@u.Telefone</td>
                <td>@u.NomeResponsavel</td>
                <td>@u.Email</td>
                <td>@u.Descricao</td>
                <td class="btn btn-info">@Html.ActionLink("Editar", "Editar", new { id = u.Id }, new { @style = "color: white;" })</td>
                <td class="btn btn-info">
                    @if (u.Ativo)
                    {
                        <a href="javascript:confirmarInativacao(@u.Id)" style="color: white;">Inativar</a>
                    }
                    else
                    {
                        <a href="javascript:confirmarAtivacao(@u.Id)" style="color:white;">Ativar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
